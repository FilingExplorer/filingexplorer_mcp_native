{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FilingExplorer for Claude",
  "version": "0.2.0",
  "identifier": "com.filingexplorer.settings",
  "build": {
    "frontendDist": "../ui/dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "cd ../ui && npm run dev",
    "beforeBuildCommand": "cd ../ui && npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "FilingExplorer for Claude",
        "width": 580,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "../../../target/release/mcp-server"
    ]
  }
}
